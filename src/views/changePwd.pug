extends _base.pug
block title
  title Sign in
block content
  main
    .uk-section.uk-section-muted.uk-flex.uk-flex-middle.uk-animation-fade(uk-height-viewport='')
      .uk-width-1-1
        .uk-container
          .uk-grid-margin.uk-grid-stack(uk-grid='' class='uk-width-1-1@m')
            .uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
              ul.uk-tab.uk-flex-center(uk-grid='' uk-switcher='')
                li
                  a(href='#') Change password
              |
              ul.uk-switcher.uk-margin
                li
                  h3.uk-card-title.uk-text-center
                    | Please, provide new password!
                  |
                  form
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: lock')
                        |
                        input.uk-input.uk-form-large(type='password' placeholder='Set a password' id="resetPassword")
                    |
                    .uk-margin
                      .uk-inline.uk-width-1-1
                        span.uk-form-icon(uk-icon='icon: lock')
                        |
                        input.uk-input.uk-form-large(type='password' placeholder='Confirm your password' id="resetConfirmPassword")
                    |

                    .uk-margin
                      p.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(onclick=`resetPassword("${token}")`)
                        | Update
